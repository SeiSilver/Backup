    public void getPercentTypeStudent(ArrayList<Student> list) {
	HashMap<String, Double> map = new HashMap<String, Double>();

	int typeA = 0, typeB = 0, typeC = 0, typeD = 0;
	int size = list.size();

	for (Student i : list) {
	    if (i.getType().equalsIgnoreCase("A")) typeA++;
	    else if (i.getType().equalsIgnoreCase("B")) typeB++;
	    else if (i.getType().equalsIgnoreCase("C")) typeC++;
	    else if (i.getType().equalsIgnoreCase("D")) typeD++;
	}

	map.put("A", (double) (typeA / size * 100));
	map.put("B", (double) (typeB / size * 100));
	map.put("C", (double) (typeC / size * 100));
	map.put("D", (double) (typeD / size * 100));

	for (Entry<String, Double> i : map.entrySet()) {
	    System.out.println(i.getKey() + ": " + i.getValue() + "%");
	}
    }

    public static void main(String[] args) {
	// TODO Auto-generated method stub
	Main m = new Main();
	ArrayList<Student> list = new ArrayList<Student>();
	int choice = 0;
	do {
	    m.menu();
	    choice = Validation.checkInt();
	    switch (choice) {
	    case 1:
		m.create(list);
		break;
	    case 2:
		m.display(list);
		break;
	    case 3:
//		HashMap<String, Double> map = m.getPercentTypeStudent(list);
		m.getPercentTypeStudent(list);

		break;
	    case 4:
		break;
	    default:
		System.out.println("Invalid selection");
		break;

	    }
	} while (choice != 3);
    }

}
